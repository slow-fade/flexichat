{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest/globals"
    ],
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./.tsbuild/node"
  },
  "include": [
    "vite.config.ts",
    "tests"
  ],
  "exclude": [
    "dist"
  ]
}
